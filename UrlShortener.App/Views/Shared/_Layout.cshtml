<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Url shortener</title>
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>

    <header>
        <a asp-controller="Home" asp-action="Index" class="logo-link">
            <h1>Url Shortener</h1>
        </a>
        <div class="header-buttons">
            <a asp-controller="AboutPage" asp-action="Index" class="btn btn-about">Aboput page</a>

            @if (!User.Identity.IsAuthenticated)
            {
                <a asp-controller="Authentication" asp-action="Login" class="btn btn-login">Login</a>
                <a asp-controller="Authentication" asp-action="Register" class="btn btn-register">Register</a>
            }
            else
            {
                <a asp-controller="Authentication" asp-action="Logout" class="btn btn-register">Logout</a>
            }
        </div>
    </header>

    <main>
        @RenderBody()
    </main>

</body>
</html>
